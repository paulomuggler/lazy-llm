# API Keys for Integration Tests
# Copy to .env and fill in your credentials

# Claude Code / Anthropic API (required for claude integration tests)
# Get your key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# Gemini CLI (required for gemini integration tests)
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=AIza...

# Test configuration
INTEGRATION_TEST_TIMEOUT=30  # seconds to wait for AI responses
INTEGRATION_TEST_CLEANUP=true  # cleanup sessions after tests
INTEGRATION_TEST_KEEP_ON_FAILURE=false  # keep sessions on failure for debugging

# Optional: Specify which tools are installed/available
# Set to "false" to skip tests for tools you don't have
TEST_CLAUDE=true
TEST_GEMINI=true
TEST_CODEX=false  # Not yet implemented
