#!/usr/bin/env bash
set -euo pipefail
TARGET="${CLAUDE_PANE:-:.+}" # default to the nxt pane if not set
# read from file arg or stdin
if [[ $# -gt 0 ]]; then
  tmux load-buffer - <"$1"
else
  tmux load-buffer - # reads stdin
fi
# Optional: wrap wiith visible delimiters so big prompts are obvious in chat
tmux send-keys -t "$TARGET" "### PROMPT $(date +'%F %T')" Enter
tmux paste-buffer -t "$TARGET" # Uncomment next line
# if you want an automatic "Send" (Enter) after pasting:
tmux send-keys -t "$TARGET" Enter
